<% var error; %> 
<%-include('./parts/header') %> 
    <section class="vh-100 d-flex flex-column justify-content-center align-items-center bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-12 d-lg-block d-none">
                        <img class="w-75 d-block ms-auto" src="/images/9364675fb26a.png" alt="Phone image">
                </div>
                <div class="col-lg-4 col-12">
                    <div class="card text-center p-5">
                        <h2 class="fw-bold">Instagram</h2>
                        <form action="/login" class="form-group signup-form" method="POST">
                            <% if(error) { %>
                                <div class="alert alert-danger validation-alert">
                                    <%= error %> 
                                </div>
                            <% } %> 
                            <input type="text" name="login" placeholder="Username or Mobile number" class="form-control my-2" autocomplete="off" required>
                            <input type="password" name="password" placeholder="Password" class="form-control my-2" autocomplete="off" required>
                            <button type="submit" class="btn btn-primary w-100 text-center mt-2">Log in</button>
                        </form>

                        <p class="reg-footer-text mt-3 text-muted">By signing up, you our <a href="#">Terms</a>, <a href="#">Data Policy</a> and <a href="#">Cookies Policy</a></p>
                    </div>
                    <div class="row mt-3 justify-content-center">
                        <div class="col-12">
                            <div class="card text-center p-4">
                                <p class="m-0 ">Don't have an account? <a href="/signup">Sign up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </section>
<%-include('./parts/footer') %> 