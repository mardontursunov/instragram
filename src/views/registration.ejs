<%-include('parts/header') %>
    <% var error; %> 
    <section class="vh-100 d-flex flex-column justify-content-center align-items-center bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card text-center p-5">
                        <h2 class="fw-bold">Instagram</h2>
                        <strong class="text-muted">Sign up to see photos and videos from your friends.</strong>
                        <button class="w-100 btn btn-primary mt-2 login-with-facebook d-flex align-items-center justify-content-center fw-bold"> <span class="fab fa-facebook-square me-2"></span> Log in with Facebook</button>
                        <div class="or-line d-flex align-items-center mt-2">
                            <hr class="left-line">
                            <span class="text-muted">OR</span>
                            <hr class="right-line">
                        </div>
                        <form action="/signup" class="form-group signup-form" method="POST">
                            <% if(error) { %>
                                <div class="alert alert-danger validation-alert">
                                    
                                    <%= error %> 
                                </div>
                            <% } %> 
                            <input type="tel" name="phone" placeholder="Mobile number" class="form-control my-2" autocomplete="off" required>
                            <input type="text" name="name" placeholder="Full name" class="form-control my-2" autocomplete="off" required>
                            <input type="text" name="username" placeholder="Username" class="form-control my-2" autocomplete="off" required>
                            <input type="password" name="password" placeholder="Password" class="form-control my-2" autocomplete="off" required>
                            <button type="submit" class="btn btn-primary w-100 text-center fw-bold">Sign up</button>
                        </form>

                        <p class="reg-footer-text mt-3 text-muted">By signing up, you our <a href="#">Terms</a>, <a href="#">Data Policy</a> and <a href="#">Cookies Policy</a></p>
                    </div>
                </div>
            </div>
            <div class="row mt-3 justify-content-center">
                <div class="col col-12 col-md-6 col-lg-4">
                    <div class="card text-center p-4">
                        <p class="m-0 ">Have an account <a href="/login">Log in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%-include('parts/footer') %> 